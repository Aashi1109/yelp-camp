<% layout('layouts/base') %>


<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">
                <%= err.message %>
            </h4>
            <p><span class="text-muted">
                    <%= err.statusCode %>
                </span></p>
            <% if (process.env.NODE_ENV !== 'production') { %>
            <p>
                <%= err.stack %>
            </p>
            <% } %>

        </div>
    </div>
</div>